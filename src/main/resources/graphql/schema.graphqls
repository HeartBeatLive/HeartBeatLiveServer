schema {
    query: Query,
    mutation: Mutation
}

type Query {
    applicationMinVersion: ApplicationMinVersion
    getSubscription: String
}

type Mutation {
    addHeartRate(heartRate: Int): StatusResponse
    updateSubscription(subscriptionPlan: String): StatusResponse
}

type StatusResponse {
    ok: Boolean
}

type ApplicationMinVersion {
    versionNumber: String
    required: Boolean
    description: String
}